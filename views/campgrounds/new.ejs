<% include ../partials/header %>

<div class="container">
	<h1 class="text-center">Create a new Campground</h1>

	<div style="width:350px; margin: 30px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Enter Name of the Campground">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="Enter the Image Url">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="Enter the Description">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>